<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calibration_white"
    android:keepScreenOn="true">

    <!-- 頂部提示區域 -->
    <LinearLayout
        android:id="@+id/ll_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/calibration_instruction_background"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brightness_calibration_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/calibration_text"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brightness_calibration_instruction"
            android:textSize="14sp"
            android:textColor="@color/calibration_text"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brightness_calibration_usage"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- 底部操作按鈕 -->
    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_hide_instruction"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/hide_instruction"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/floating_button_primary"
            android:layout_marginEnd="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btn_close_calibration"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/close_calibration"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/floating_button_secondary"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- 點擊區域提示（隱藏狀態下顯示） -->
    <TextView
        android:id="@+id/tv_tap_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/tap_to_show_controls"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/calibration_hint_background"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="2dp" />

</RelativeLayout>
