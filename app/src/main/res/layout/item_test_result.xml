<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardViewStyle"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 標題行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_test_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-01 10:00"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_battery_consumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5%"
                android:textSize="16sp"
                android:textColor="@color/status_running"
                android:textStyle="bold"
                android:background="@drawable/consumption_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- 測試主題 -->
        <TextView
            android:id="@+id/tv_test_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="影片播放測試"
            android:textSize="13sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="visible" />

        <!-- 詳細信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="測試時間"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分0秒"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="電量變化"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_battery_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85% → 80%"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消耗率"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_consumption_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.0%/小時"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- 時間範圍和複製按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10:00:00 - 10:30:00"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <Button
                android:id="@+id/btn_copy_result"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="📋 複製"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/floating_button_primary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

