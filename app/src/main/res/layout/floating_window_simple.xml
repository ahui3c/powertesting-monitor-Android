<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:background="@drawable/floating_window_background"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center">

    <!-- 狀態和電量顯示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待機"
            android:textColor="@color/floating_text_primary"
            android:textSize="10sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@color/floating_text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 按鈕區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="開始"
            android:textSize="10sp"
            android:textColor="@color/floating_button_text"
            android:background="@drawable/floating_button_compact_background"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="×"
            android:textSize="12sp"
            android:textColor="@color/floating_close_color"
            android:background="@drawable/floating_button_close_compact"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp" />

    </LinearLayout>

</LinearLayout>

