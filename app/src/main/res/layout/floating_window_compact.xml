<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/floating_window_compact_width"
    android:layout_height="@dimen/floating_window_compact_height"
    android:background="@drawable/floating_window_compact_background"
    android:orientation="vertical"
    android:padding="@dimen/floating_compact_padding"
    android:gravity="center">

    <!-- 頂部狀態行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 電池圖標 -->
        <ImageView
            android:id="@+id/iv_battery_icon"
            android:layout_width="@dimen/floating_icon_small"
            android:layout_height="@dimen/floating_icon_small"
            android:src="@drawable/ic_battery"
            android:tint="@color/floating_icon_color" />

        <!-- 電量顯示 -->
        <TextView
            android:id="@+id/tv_battery_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="100%"
            android:textColor="@color/floating_text_primary"
            android:textSize="@dimen/floating_text_small"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- 狀態指示器 -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="@dimen/floating_indicator_small"
            android:layout_height="@dimen/floating_indicator_small"
            android:background="@drawable/status_indicator_compact" />

        <!-- 關閉按鈕 -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/floating_button_small"
            android:layout_height="@dimen/floating_button_small"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/floating_button_close_compact"
            android:padding="2dp"
            android:tint="@color/floating_close_color"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- 中間信息行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 時間信息 -->
        <TextView
            android:id="@+id/tv_time_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待機"
            android:textColor="@color/floating_text_secondary"
            android:textSize="@dimen/floating_text_tiny"
            android:gravity="start"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- 消耗信息 -->
        <TextView
            android:id="@+id/tv_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/floating_consumption_color"
            android:textSize="@dimen/floating_text_tiny"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 底部操作按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 主要操作按鈕 -->
        <TextView
            android:id="@+id/btn_main_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/floating_button_compact_height"
            android:layout_weight="1"
            android:text="開始"
            android:textColor="@color/floating_button_text"
            android:textSize="@dimen/floating_text_small"
            android:textStyle="bold"
            android:background="@drawable/floating_button_compact_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <!-- 設定按鈕 -->
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/floating_button_small"
            android:layout_height="@dimen/floating_button_small"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_settings"
            android:background="@drawable/floating_button_secondary_compact"
            android:padding="4dp"
            android:tint="@color/floating_secondary_color"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>

