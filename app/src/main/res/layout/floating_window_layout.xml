<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_window_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- 標題欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_battery"
            android:tint="@color/primary_color"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/floating_window_title"
            android:textSize="12sp"
            android:textColor="@color/floating_window_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/floating_window_border"
        android:layout_marginVertical="6dp" />

    <!-- 狀態顯示區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 狀態指示器 -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_indicator"
            android:layout_marginEnd="6dp" />

        <!-- 狀態文字 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/status_idle"
            android:textSize="11sp"
            android:textColor="@color/floating_window_text" />

    </LinearLayout>

    <!-- 電量信息 -->
    <LinearLayout
        android:id="@+id/layout_battery_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電量："
            android:textSize="10sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="10sp"
            android:textColor="@color/floating_window_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_battery_consumed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/status_running"
            android:textAlignment="textEnd"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 時間信息 -->
    <LinearLayout
        android:id="@+id/layout_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間："
            android:textSize="10sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_elapsed_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="10sp"
            android:textColor="@color/floating_window_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 操作按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="@string/start_monitoring"
            android:textSize="10sp"
            android:background="@drawable/floating_button_background"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/floating_button_secondary_background"
            android:text="⚙"
            android:textSize="12sp"
            android:textColor="@color/primary_color" />

    </LinearLayout>

</LinearLayout>

